---

/* import TopMenu from '../components/TopMenu.astro'; */
import TopMenu from '../components/react_components/TopMenu.jsx';
import RouterLinks from '../components/react_components/RouterLinks.jsx';
import TopMenuSuffle from '../components/header/TopMenuSuffle.astro';

import FootUWIFI from '../components/global/FootUWIFI.astro';
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<header>

		<RouterLinks  transition:persist client:only />
		<!-- <TopMenuSuffle /> -->
	</header>
	<body>	
	<div id="top"></div>
	


	<main>	
		<slot />
	</main>
	</body>
	<footer>
	<FootUWIFI />
	</footer>
</html>
<style is:global>
	@font-face {
  font-family: 'Inter';
  src: url('fonts/Inter.ttf') format('ttf');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
	:root {
		--primary-color: #1B69DF;
		--secondary-color: #ffffff;
		--tertiary-color: #043682;

		--primary-text-color: #000000;
		--secondary-text-color: ##373737;
		--tertiary-text-color: #ffffff;
		--quaternary-text-color: #1B69DF;

		--primary-buttom-color: #1B69DF;
		--primary-buttom-text-color:#ffffff;
		--secondary-buttom-text-color:#1B69DF;
		--secondary-buttom-color: #7C47DD;

		--navbar-bg-color:#043682;
		--navbar-blur: 25px;

		--primary-gradient: linear-gradient(270deg, #1363DB 7.7%, #093373 99.9%);
		--secondary-gradient: linear-gradient(180deg, #1364DE 0%, #08306D 100%);
		--tertiary-gradient:  linear-gradient(264deg, #146DF4 11.89%, #02214F 89.54%);

		--primary-bg-color: #ffffff;
		--secondary-bg-color: #e9e9e9;

		--font-family: 'Inter', sans-serif;
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--fs-xl: clamp(3.5rem, 12vw + 1rem, 12rem);
		--fs-lg: clamp(1.25rem, 2vw, 1.5rem);
		--fs-md: clamp(1rem, 1.5vw, 1.25rem);
		--fs-sm: clamp(0.875rem, 1.25vw, 1rem);
		--fs-xs: clamp(0.75rem, 1vw, 0.875rem);
		--fs-xxs: clamp(0.625rem, 0.75vw, 0.75rem);
	}

	*, 
	*::before, 
	*::after{
		font-family: var(--font-family);
		box-sizing: border-box;
		text-overflow: ellipsis;
	
	}

	html {
		background: var(--primary-bg-color);
		position: relative;
	overflow-x: hidden;
	-webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select:none;
    user-select:none;
	box-sizing: border-box;
	scroll-behavior: smooth;
	}
	body{
		font-family: var(--font-family);
		overflow: hidden;
	}



	header {
	  position: fixed;
	  top: 0;
	  left: 0;
	  width: 100%;
	  z-index: 100;
	}
	footer {
		padding-left: clamp(0px, 10vw, 100px);
		padding-right: clamp(0px, 10vw, 100px);
	}

  


</style>
